<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TDF" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#001133</item>
        <item name="colorPrimaryVariant">#001133</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="userMenuItems" parent="Theme.AppCompat.Light">
        <item name="android:textSize">7sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TeaBoyMenuItems" parent="Theme.AppCompat.Light">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/CustomeBottomSheeteStyle</item>
    </style>

    <style name="CustomeBottomSheeteStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/category_back</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#557EF2</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
        <item name="textSize">16sp</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="CheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#59B48D</item>
        <item name="android:buttonTint">#59B48D</item>
        <item name="android:textColorSecondary">#EAEAEA</item>
    </style>

    <style name="Calendar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#3360DD</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>