<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/acceptFragment">

    <fragment
        android:id="@+id/userhomeFragment"
        android:name="com.utechia.tdf.home.UserHomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_user" />
    <fragment
        android:id="@+id/refreshmentFragment"
        android:name="com.utechia.tdf.refreshment.RefreshmentsFragment"
        android:label="fragment_refreshment"
        tools:layout="@layout/fragment_refreshment" >
        <action
            android:id="@+id/action_refreshmentFragment_to_createRefreshmentFragment"
            app:destination="@id/createRefreshmentFragment" />

        <action
            android:id="@+id/action_refreshmentFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />

        <action
            android:id="@+id/action_refreshmentFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/reservationFragment"
        android:name="com.utechia.tdf.reservation.ReservationFragment"
        android:label="fragment_reservation"
        tools:layout="@layout/fragment_reservation" >
        <action
            android:id="@+id/action_reservationFragment_to_createReservationFragment"
            app:destination="@id/createReservationFragment" />
        <action
            android:id="@+id/action_reservationFragment_to_reservationDetails"
            app:destination="@id/reservationDetails" />
        <action
            android:id="@+id/action_reservationFragment_self"
            app:destination="@id/reservationFragment" />
    </fragment>
    <fragment
        android:id="@+id/userprofileFragment"
        android:name="com.utechia.tdf.profile.UserProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.utechia.tdf.more.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/createReservationFragment"
        android:name="com.utechia.tdf.reservation.CreateReservationFragment"
        android:label="fragment_create_reservation"
        tools:layout="@layout/fragment_create_reservation" >
        <action
            android:id="@+id/action_createReservationFragment_self"
            app:destination="@id/createReservationFragment" />
        <argument
            android:name="month_id"
            app:argType="integer" />
        <argument
            android:name="day_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_createReservationFragment_to_reservationDetails"
            app:destination="@id/reservationDetails" />
    </fragment>
    <fragment
        android:id="@+id/reservationDetails"
        android:name="com.utechia.tdf.reservation.ReservationDetails"
        android:label="fragment_reservation_details"
        tools:layout="@layout/fragment_reservation_details" >
        <argument
            android:name="roomTitle"
            app:argType="string" />
        <argument
            android:name="currentDay"
            app:argType="integer" />
        <argument
            android:name="currentMonth"
            app:argType="integer" />
        <argument
            android:name="imageRoom"
            app:argType="string" />
        <argument
            android:name="time"
            app:argType="string" />
        <argument
            android:name="capacity"
            app:argType="integer" />
        <action
            android:id="@+id/action_reservationDetails_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="duration"
            app:argType="string" />
        <action
            android:id="@+id/action_reservationDetails_to_createReservationFragment"
            app:destination="@id/createReservationFragment" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.utechia.tdf.qrcode.QrCodeFragment"
        android:label="fragment_qr_code"
        tools:layout="@layout/fragment_qr_code" />
    <fragment
        android:id="@+id/surveySystemFragment"
        android:name="com.utechia.tdf.more.SurveySystemFragment"
        android:label="fragment_survey_system"
        tools:layout="@layout/fragment_survey_system" />
    <fragment
        android:id="@+id/eventSystemFragment"
        android:name="com.utechia.tdf.more.EventSystemFragment"
        android:label="fragment_event_system"
        tools:layout="@layout/fragment_event_system" />
    <fragment
        android:id="@+id/ticketSystemFragment"
        android:name="com.utechia.tdf.more.TicketSystemFragment"
        android:label="fragment_ticket_system"
        tools:layout="@layout/fragment_ticket_system" >
        <action
            android:id="@+id/action_ticketSystemFragment_to_createTicketFragment"
            app:destination="@id/createTicketFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.utechia.tdf.more.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/createTicketFragment"
        android:name="com.utechia.tdf.more.CreateTicketFragment"
        android:label="fragment_create_ticket"
        tools:layout="@layout/fragment_create_ticket" />
    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.utechia.tdf.permission.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" />
    <dialog
        android:id="@+id/resultFragment"
        android:name="com.utechia.tdf.reservation.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_reservationFragment"
            app:destination="@id/reservationFragment" />
    </dialog>

    <fragment
        android:id="@+id/createRefreshmentFragment"
        android:name="com.utechia.tdf.refreshment.CreateRefreshmentFragment"
        android:label="fragment_create_refreshment"
        tools:layout="@layout/fragment_create_refreshment" >
        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_createRefreshmentFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_createRefreshmentFragment_to_orderFragment"
            app:destination="@id/orderFragment" />

        <action
            android:id="@+id/action_createRefreshmentFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />

    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.utechia.tdf.refreshment.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_deleteFragment"
            app:destination="@id/deleteFragment" />
        <action
            android:id="@+id/action_cartFragment_to_orderResultFragment"
            app:destination="@id/orderResultFragment" />
        <action
            android:id="@+id/action_cartFragment_to_orderFragment"
            app:launchSingleTop="true"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.utechia.tdf.order.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/action_orderFragment_to_orderResultFragment"
            app:destination="@id/orderResultFragment" />
        <action
            android:id="@+id/action_orderFragment_to_cancelFragment"
            app:destination="@id/cancelFragment" />
        <action
            android:id="@+id/action_orderFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
    </fragment>

    <dialog
        android:id="@+id/orderResultFragment"
        android:name="com.utechia.tdf.order.OrderResultFragment"
        android:label="fragment_order_result"
        tools:layout="@layout/fragment_order_result" >
        <action
            android:id="@+id/action_orderResultFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </dialog>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.utechia.tdf.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.utechia.tdf.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <deepLink
            android:id="@+id/deepLink"
            app:uri="https://auth.tdf.gov.sa:4002/?code={code}" />

        <argument
            android:name="code"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_loginFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />

        <action
            android:id="@+id/action_loginFragment_to_userhomeFragment"
            app:destination="@id/refreshmentFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"/>

        <action
            android:id="@+id/action_loginFragment_to_teaBoyHomeFragment"
            app:launchSingleTop="true"
            app:destination="@id/teaBoyHomeFragment" />

    </fragment>

    <dialog
        android:id="@+id/authenticationFragment"
        android:name="com.utechia.tdf.login.AuthenticationFragment"
        android:label="fragment_authentication"
        tools:layout="@layout/fragment_authentication" >

        <action
            android:id="@+id/action_authenticationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </dialog>
    <fragment
        android:id="@+id/teaBoyHomeFragment"
        android:name="com.utechia.tdf.home.TeaBoyHomeFragment"
        android:label="fragment_tea_boy_home"
        tools:layout="@layout/fragment_tea_boy_home" >
        <action
            android:id="@+id/action_teaBoyHomeFragment_to_statusFragment"
            app:destination="@id/statusFragment" />
        <action
            android:id="@+id/action_teaBoyHomeFragment_to_deactivationFragment"
            app:destination="@id/deactivationFragment" />
        <action
            android:id="@+id/action_teaBoyHomeFragment_to_activationFragment"
            app:destination="@id/activationFragment" />
    </fragment>

    <fragment
        android:id="@+id/teaBoyOrdersFragment"
        android:name="com.utechia.tdf.order.TeaBoyOrdersFragment"
        android:label="fragment_tea_boy_orders"
        tools:layout="@layout/fragment_tea_boy_orders" >
        <action
            android:id="@+id/action_teaBoyOrdersFragment_to_acceptFragment"
            app:destination="@id/acceptFragment" />
        <action
            android:id="@+id/action_teaBoyOrdersFragment_to_rejectFragment"
            app:destination="@id/rejectFragment" />

        <action
            android:id="@+id/action_orderFragment_to_orderDetailsFragment"
            app:destination="@id/orderDetailsFragment" />
        <action
            android:id="@+id/action_teaBoyOrdersFragment_self"
            app:destination="@id/teaBoyOrdersFragment" />

    </fragment>

    <dialog
        android:id="@+id/deleteFragment"
        android:name="com.utechia.tdf.refreshment.DeleteFragment"
        android:label="fragment_delete"
        tools:layout="@layout/fragment_delete" >

        <argument
            android:name="foodId"
            app:argType="integer" />
        <action
            android:id="@+id/action_deleteFragment_to_cartFragment"
            app:launchSingleTop="true"
            app:destination="@id/cartFragment" />

    </dialog>

    <dialog
        android:id="@+id/cancelFragment"
        android:name="com.utechia.tdf.order.CancelFragment"
        android:label="fragment_cancel"
        tools:layout="@layout/fragment_cancel" >
        <argument
            android:name="orderId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_cancelFragment_to_orderFragment"
            app:launchSingleTop="true"
            app:destination="@id/orderFragment" />
    </dialog>

    <dialog
        android:id="@+id/statusFragment"
        android:name="com.utechia.tdf.home.StatusFragment"
        android:label="fragment_status"
        tools:layout="@layout/fragment_status" />
    <dialog
        android:id="@+id/orderDetailsFragment"
        android:name="com.utechia.tdf.order.OrderDetailsFragment"
        android:label="fragment_order_details"
        tools:layout="@layout/fragment_order_details" >
        <argument
            android:name="cartId"
            app:argType="integer"
            android:defaultValue="0" />
    </dialog>
    <dialog
        android:id="@+id/acceptFragment"
        android:name="com.utechia.tdf.order.AcceptFragment"
        android:label="fragment_accept"
        tools:layout="@layout/fragment_accept" >

        <argument
            android:name="orderId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_acceptFragment_to_teaBoyOrdersFragment"
            app:launchSingleTop="true"
            app:destination="@id/teaBoyOrdersFragment" />

    </dialog>
    <dialog
        android:id="@+id/rejectFragment"
        android:name="com.utechia.tdf.order.RejectFragment"
        android:label="fragment_reject"
        tools:layout="@layout/fragment_reject" >

        <argument
            android:name="orderId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_rejectFragment_to_teaBoyOrdersFragment"
            app:launchSingleTop="true"
            app:destination="@id/teaBoyOrdersFragment" />

    </dialog>
    <dialog
        android:id="@+id/confirmFragment"
        android:name="com.utechia.tdf.order.ConfirmFragment"
        android:label="fragment_confirm"
        tools:layout="@layout/fragment_confirm" >


    </dialog>
    <dialog
        android:id="@+id/activationFragment"
        android:name="com.utechia.tdf.home.ActivationFragment"
        android:label="fragment_activation"
        tools:layout="@layout/fragment_activation" >
        <action
            android:id="@+id/action_activationFragment_to_teaBoyHomeFragment"
            app:destination="@id/teaBoyHomeFragment" />
    </dialog>
    <dialog
        android:id="@+id/deactivationFragment"
        android:name="com.utechia.tdf.home.DeactivationFragment"
        android:label="fragment_deactivation"
        tools:layout="@layout/fragment_deactivation" >
        <action
            android:id="@+id/action_deactivationFragment_to_teaBoyHomeFragment"
            app:destination="@id/teaBoyHomeFragment" />
    </dialog>

    <dialog
        android:id="@+id/teaBoyNotificationFragment"
        android:name="com.utechia.tdf.order.TeaBoyNotificationFragment"
        android:label="fragment_notification_teaboy"
        tools:layout="@layout/fragment_notification_teaboy" >

    <action
        android:id="@+id/action_teaBoyNotificationFragment_to_teaBoyOrdersFragment"
        app:destination="@id/teaBoyOrdersFragment" />

    </dialog>
    <fragment
        android:id="@+id/cancelRequestFragment"
        android:name="com.utechia.tdf.permission.CancelRequestFragment"
        android:label="fragment_cancel_request"
        tools:layout="@layout/fragment_cancel_request" />
    <fragment
        android:id="@+id/requestDetailsFragment"
        android:name="com.utechia.tdf.permission.RequestDetailsFragment"
        android:label="fragment_request_details"
        tools:layout="@layout/fragment_request_details" />
    <fragment
        android:id="@+id/createRequestFragment"
        android:name="com.utechia.tdf.permission.CreateRequestFragment"
        android:label="fragment_create_request"
        tools:layout="@layout/fragment_create_request" />
    <fragment
        android:id="@+id/calendarRequestFragment"
        android:name="com.utechia.tdf.permission.CalendarRequestFragment"
        android:label="fragment_calendar_request"
        tools:layout="@layout/fragment_calendar_request" />
    <fragment
        android:id="@+id/confirmRequestFragment"
        android:name="com.utechia.tdf.permission.ConfirmRequestFragment"
        android:label="fragment_confirm_request"
        tools:layout="@layout/fragment_confirm_request" />

</navigation>